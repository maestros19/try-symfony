# Dockerfile.dev - Image complète pour développement avec MySQL
FROM php:8.4.11-fpm

# Installation des dépendances et extensions
RUN apt-get update && apt-get install -y \
    git \
    unzip \
    vim \
    nano \
    curl \
    wget \
    libpq-dev \
    libicu-dev \
    libzip-dev \
    libonig-dev \
    libxml2-dev \
    zlib1g-dev \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libssl-dev \
    libcurl4-openssl-dev \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install -j$(nproc) \
    pdo_pgsql \
    pdo_mysql \
    mysqli \
    intl \
    zip \
    opcache \
    mbstring \
    xml \
    gd \
    bcmath \
    sockets \
    && pecl install xdebug-3.3.1 redis \
    && docker-php-ext-enable xdebug redis \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Configuration Xdebug
RUN { \
    echo 'xdebug.mode=develop,debug,coverage'; \
    echo 'xdebug.client_host=host.docker.internal'; \
    echo 'xdebug.client_port=9003'; \
    echo 'xdebug.start_with_request=yes'; \
    echo 'xdebug.idekey=PHPSTORM'; \
    } > /usr/local/etc/php/conf.d/xdebug.ini

# Configuration OPcache désactivé pour dev
RUN { \
    echo 'opcache.enable=1'; \
    echo 'opcache.enable_cli=1'; \
    echo 'opcache.validate_timestamps=1'; \
    echo 'opcache.revalidate_freq=0'; \
    } > /usr/local/etc/php/conf.d/opcache-dev.ini

# Configuration PHP pour développement
RUN { \
    echo 'memory_limit=512M'; \
    echo 'max_execution_time=300'; \
    echo 'display_errors=On'; \
    echo 'error_reporting=E_ALL'; \
    echo 'log_errors=On'; \
    } > /usr/local/etc/php/conf.d/php-dev.ini

# Installation de Composer
COPY --from=composer:2.7 /usr/bin/composer /usr/bin/composer

# Installation de Symfony CLI
RUN curl -sS https://get.symfony.com/cli/installer | bash && \
    mv /root/.symfony*/bin/symfony /usr/local/bin/symfony

WORKDIR /app

# Permissions pour le développement
RUN chown -R www-data:www-data /app

USER www-data

EXPOSE 9000

CMD ["php-fpm"]